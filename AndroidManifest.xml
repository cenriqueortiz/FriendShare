<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hyperkode.friendshare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="8"
        android:targetSdkVersion="8"
    />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_RESOURCE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
 
    <application
        android:icon="@drawable/friendshare"
        android:label="@string/app_name" >
        
        <uses-library android:name="com.google.android.maps" />
        
        <activity
            android:name=".activities.StartActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />

        <activity
            android:name=".activities.LandingActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />

        <activity
            android:name=".activities.CameraActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />
       
       <activity
            android:name=".activities.CameraActivity2"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />

       <activity
            android:name=".activities.TwitterWebViewActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />
       
       <activity
            android:name=".activities.TwitterList"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />

       <activity
            android:name=".activities.TwitterMapViewActivity"
            android:label="@string/app_name" 
            android:theme="@style/GeneralTheme"
            />
       
    </application>

</manifest>

